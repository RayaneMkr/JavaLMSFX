<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<GridPane fx:controller="com.example.javafxlms.RegisterController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Prénom:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="prenomField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Mot de passe:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Numéro de sécurité sociale:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="numSecuField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="" fx:id="erreur"/>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="S'inscrire" onAction="#inscription"/>
    </HBox>

    <Button text="connexion" onAction="#handleBackToLogin"
            GridPane.columnIndex="0" GridPane.rowIndex="5"/>
</GridPane>