<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.javafxlms.controller.gestionnaire.GestionProduit">
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="searchField" onAction="#searchField" promptText="Rechercher un produit" HBox.hgrow="ALWAYS" />
        <Button fx:id="rechercher" onAction="#handleSearch" text="Rechercher" />
    </HBox>

    <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="libelleColumn" text="Libellé" />
            <TableColumn fx:id="descriptionColumn" text="Description" />
            <TableColumn fx:id="dangerositeColumn" text="Dangerosité" />
            <TableColumn fx:id="dateCreationColumn" text="Date de création" />
            <TableColumn fx:id="quantiteColumn" text="Quantité en stock" />
        </columns>
    </TableView>

    <GridPane hgap="5" vgap="5">
        <TextField fx:id="libelleField" promptText="Libellé" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextArea fx:id="descriptionArea" promptText="Description" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="2" />
        <Spinner fx:id="dangerositeSpinner" max="5" min="1" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Spinner fx:id="quantiteSpinner" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="ajouter" onAction="#ajouterProduit" text="Ajouter" />
        <Button fx:id="modifier" onAction="#modifProduit" text="Modifier" />
        <Button fx:id="supprimer" onAction="#supprProduit" text="Supprimer" />
    </HBox>
</VBox>
