<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javafxlms.controller.admin.GestionUtilisateurController" spacing="10">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Rechercher un utilisateur" HBox.hgrow="ALWAYS"/>
        <Button text="Rechercher" onAction="#handleSearch"/>
    </HBox>

    <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Nom" fx:id="nomColumn"/>
            <TableColumn text="Prénom" fx:id="prenomColumn"/>
            <TableColumn text="Email" fx:id="emailColumn"/>
            <TableColumn text="Numéro de sécurité sociale" fx:id="numSecuColumn"/>
            <TableColumn text="Rôle" fx:id="roleColumn"/>
        </columns>
    </TableView>

    <GridPane vgap="5" hgap="5">
        <TextField fx:id="nomField" promptText="Nom" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="prenomField" promptText="Prénom" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <TextField fx:id="emailField" promptText="Email" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="mdpField" promptText="Mot de passe" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextField fx:id="numSecuField" promptText="Numéro de sécurité sociale" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="roleComboBox" promptText="Rôle" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" onAction="#handleAddUser"/>
        <Button text="Modifier" onAction="#handleEditUser"/>
        <Button text="Supprimer" onAction="#handleDeleteUser"/>
        <Button text="Réinitialiser" onAction="#handleResetForm"/>
    </HBox>
</VBox>